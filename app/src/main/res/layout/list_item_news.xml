<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

    <ImageView android:id="@+id/iv_icon"
               android:layout_width="100dp"
               android:layout_height="60dp"
               android:scaleType="fitXY"
               android:src="@drawable/news_pic_default"
               android:background="#a000"
               android:padding="0.5dp"
               android:layout_marginRight="5dp"
    />
    <TextView android:id="@+id/iv_title"
              android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/iv_icon"
              android:maxLines="2"
              android:textSize="16sp"
              android:textColor="#000"/>

    <TextView android:id="@+id/iv_time"
              android:text="2020-08-12 14:04"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/iv_icon"
              android:layout_alignLeft="@id/iv_title"
              android:textSize="16sp"
              android:textColor="#a000"/>

</RelativeLayout>
