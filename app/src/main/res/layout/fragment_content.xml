<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>

    <com.yrj.zhbj.view.NoScrollViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
    />
    <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_tab_bg"
            android:orientation="horizontal"
    >
        <RadioButton
                android:text="首页"
                android:id="@+id/rg_home"
                android:drawableTop="@drawable/tab_home_selector"
                style="@style/ButtomTagStyle"/>
        <RadioButton
                android:text="新闻中心"
                android:id="@+id/rg_news"
                android:drawableTop="@drawable/tab_news_selector"
                style="@style/ButtomTagStyle"/>
        <RadioButton
                android:text="智慧服务"
                android:id="@+id/rg_smart"
                android:drawableTop="@drawable/tab_smart_selector"
                style="@style/ButtomTagStyle"/>
        <RadioButton
                android:text="政务"
                android:id="@+id/rg_gov"
                android:drawableTop="@drawable/tab_gov_selector"
                style="@style/ButtomTagStyle"/>
        <RadioButton
                android:text="设置"
                android:id="@+id/rg_setting"
                android:drawableTop="@drawable/tab_setting_selector"
                style="@style/ButtomTagStyle"/>

    </RadioGroup>

</LinearLayout>
